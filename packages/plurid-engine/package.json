{
    "name": "@plurid/plurid-engine",
    "version": "0.1.1",
    "description": "Plurid Engine and Utility Functions",
    "keywords": [
        "plurid",
        "engine"
    ],
    "author": "Jan Cavel <caveljan@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/plurid"
    },
    "bugs": {
        "email": "feedback@plurid.com",
        "url": "https://github.com/plurid/plurid/issues"
    },
    "homepage": "https://github.com/plurid/plurid/blob/master/packages/plurid-engine/README.md",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "main": "dist/plurid-engine.umd.js",
    "module": "dist/plurid-engine.es5.js",
    "typings": "dist/types/index.d.ts",
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "lint": "eslint ./src --ext .ts",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "prebuild": "rimraf dist",
        "spec": "jest --coverage",
        "spec.watch": "jest --coverage --watch",
        "spec.prod": "npm run lint && npm run spec -- --no-cache",
        "start": "rollup -c rollup.config.ts -w",
        "build.removeSpecs": "rm -rf `find ./dist/ -type d -name __specs__`",
        "build.dev": "tsc --module commonjs && rollup -c rollup.config.ts && yarn build.removeSpecs",
        "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src && yarn build.removeSpecs",
        "prepublishOnly": "yarn build"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__specs__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverageFrom": [
            "src/*.{js,ts}"
        ]
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.5",
        "colors": "^1.3.3",
        "coveralls": "^3.0.6",
        "jest": "^24.9.0",
        "jest-config": "^24.9.0",
        "lodash.camelcase": "^4.3.0",
        "prompt": "^1.0.0",
        "replace-in-file": "^4.1.3",
        "rimraf": "^3.0.0",
        "rollup": "^1.21.2",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.24.2",
        "shelljs": "^0.8.3",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.3.0",
        "typedoc": "^0.15.0",
        "typescript": "^3.6.3"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^2.2.0",
        "@typescript-eslint/parser": "^2.2.0",
        "eslint": "^6.4.0"
    }
}
