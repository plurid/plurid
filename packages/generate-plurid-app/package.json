{
    "name": "@plurid/generate-plurid-app",
    "version": "0.1.1",
    "description": "Generate a plurid' application with one command (and 3 choices)",
    "keywords": [
        "plurid",
        "generate",
        "application",
        "3D",
        "html"
    ],
    "author": "Jan Cavel <caveljan@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/plurid"
    },
    "bugs": {
        "email": "feedback@plurid.com",
        "url": "https://github.com/plurid/plurid/issues"
    },
    "homepage": "https://github.com/plurid/plurid/blob/master/packages/generate-plurid-app/README.md",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=6.0.0"
    },
    "main": "dist/generate-plurid-app.umd.js",
    "module": "dist/generate-plurid-app.es5.js",
    "typings": "dist/types/index.d.ts",
    "bin": {
        "generate-plurid-app": "bin/generate-plurid-app"
    },
    "files": [
        "dist",
        "bin"
    ],
    "preferGlobal": true,
    "scripts": {
        "tsc": "tsc",
        "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "prebuild": "rimraf dist",
        "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src && yarn build.removeSpecs",
        "build.dev": "tsc --module commonjs && rollup -c rollup.config.ts && yarn build.removeSpecs",
        "build.removeSpecs": "rm -rf `find ./dist/ -type d -name __specs__`",
        "start": "rollup -c rollup.config.ts -w",
        "spec": "jest --coverage",
        "spec:watch": "jest --coverage --watch",
        "spec:prod": "npm run lint && npm run spec -- --no-cache",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "prepublishOnly": "yarn build"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverageFrom": [
            "src/*.{js,ts}"
        ]
    },
    "dependencies": {
        "commander": "^3.0.1",
        "inquirer": "^7.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/inquirer": "^6.5.0",
        "@types/node": "^12.7.3",
        "colors": "^1.3.3",
        "coveralls": "^3.0.6",
        "cross-env": "^5.2.0",
        "jest": "^24.9.0",
        "jest-config": "^24.9.0",
        "lodash.camelcase": "^4.3.0",
        "prompt": "^1.0.0",
        "replace-in-file": "^4.1.3",
        "rimraf": "^3.0.0",
        "rollup": "^1.20.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.24.0",
        "shelljs": "^0.8.3",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "tslint-config-standard": "^8.0.1",
        "typedoc": "^0.15.0",
        "typescript": "^3.6.2"
    }
}
