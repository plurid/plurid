{
    "name": "@plurid/plurid-pubsub",
    "version": "0.1.7",
    "description": "Plurid Publish/Subscribe",
    "keywords": [
        "plurid",
        "pubsub"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/plurid"
    },
    "bugs": {
        "email": "feedback@plurid.com",
        "url": "https://github.com/plurid/plurid/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "homepage": "https://github.com/plurid/plurid/blob/master/packages/plurid-pubsub/README.md",
    "files": [
        "distribution/"
    ],
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "jsnext:main": "distribution/index.es.js",
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "scripts": {
        "clean": "rimraf ./distribution",
        "clean.tests": "find ./distribution -type d -name \"__tests__\" -prune -exec rm -rf {} +",
        "test": "jest ./source --config ./jest.config.js --rootDir ./",
        "lint": "eslint ./source --ext .ts,.tsx",
        "start": "yarn clean && rollup -c -w --environment MODE_ENV:local",
        "build.local": "yarn clean && rollup -c --environment ENV_MODE:local",
        "build.development": "yarn clean && rollup -c --environment ENV_MODE:development",
        "build.production": "yarn clean && rollup -c --environment ENV_MODE:production",
        "build": "yarn lint && yarn test && yarn build.production && yarn clean.tests",
        "prepublishOnly": "yarn build"
    },
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "@types/react": "^16.9.34",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "eslint": "^6.8.0",
        "jest": "^25.3.0",
        "rollup": "^2.6.1",
        "rollup-plugin-typescript2": "^0.27.0",
        "ts-jest": "^25.4.0",
        "typescript": "^3.8.3"
    }
}
