import base from joiner.base



{
    ...#base
    #package
    #packages
    #commit
}


packages [
    ./packages/plurid-web/plurid-core/*
    ./packages/plurid-web/plurid-html
    // ./packages/plurid-web/plurid-html-server
    ./packages/plurid-web/plurid-react
    ./packages/plurid-web/plurid-react-server
]

package {
    ...#base.package
    ignore [
        packages/plurid-web/plurid-core/plurid-server
        node_modules
    ]
}


commit {
    ...#base.commit
    root 'plurid-web/'
}
