import base from joiner.base



{
    ...#base
    #packages
    #package
    #development
}


packages [
    './packages/plurid-utilities/*'
    './packages/plurid-web/*'
    './packages/plurid-native/*'
    './fixtures/*'
]

package {
    ...#base.package
    ignore [
        'fixtures/extras'
        node_modules
    ]
}

development {
    watchPackages all
    serverPort 55000
    watchDirectories [
        build
        distribution
        dist
    ]
    externalPackages []
}
