{
    "compilerOptions": {
        "target": "es5",
        "module":"es2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "noLib": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
